@startuml

!include configuration/skinParams.puml
!include configuration/definitions.puml

skinparam linetype polyline
left to right direction

actor user
view MembersView
controller UpdateMemberController
controller OpenMembersController as ":OpenMembersController"
model MembersDAO
model Member

user -right-> MembersView
note on link
    startUpdate(memberId)
    setName(name)
    setRoles(rolesList)
    updateMember(memberId, member)
    cancel()
end note

MembersView --> UpdateMemberController
note on link
    readMember(memberId)
    updateMember(memberId, member)
    cancel()
end note

MembersView --> OpenMembersController
note on link
    openMembers()
end note


MembersView --> Member
note on link
    getName()
    getRoles()
    setName(name)
    setRoles(rolesList)
end note

UpdateMemberController --> MembersDAO
note on link
    readMember(memberId)
    updateMember(memberId, member)
end note

UpdateMemberController -- Member

OpenMembersController --> MembersDAO
note on link
readMembers()
end note

MembersDAO -- Member


@enduml