@startuml

!include procedures/SaltProcedure.puml
!include procedures/ProjectManagement.puml
!include procedures/PlanProject.puml
!include procedures/InitProject.puml
!include procedures/MemberManagement.puml
!include procedures/CreateMemberUI.puml
!include procedures/DeleteMemberUI.puml
!include procedures/UpdateMemberUI.puml

skinparam {
    NoteBackgroundColor #whiteSmoke
    StateBackgroundColor #green
}

(*) -down-> SALT(initProject) #LawnGreen
initProject -right-> SALT(planProject)
    note on link
    plan project
    end note
planProject -left-> SALT(initProject)
    note on link
    cancel
    end note
planProject -down-> SALT(projectManagement) #LawnGreen
note on link
    openPhases
end note

projectManagement -right-> SALT(memberManagement) #LawnGreen
    note on link
        openMembers
    end note

memberManagement -right-> SALT(createMemberUI)
note on link
    create member
end note

memberManagement -down-> SALT(deleteMemberUI)
note on link
    delete member
end note

memberManagement -right-> SALT(updateMemberUI)
note on link
    update member
end note
@enduml


